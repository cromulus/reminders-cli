{
  "tools": [
    {
      "name": "create_reminder",
      "description": "Create a new reminder in a specific list",
      "parameters": {
        "type": "object",
        "properties": {
          "listName": {
            "type": "string",
            "description": "Name of the list to create the reminder in"
          },
          "title": {
            "type": "string",
            "description": "Title of the reminder"
          },
          "notes": {
            "type": "string",
            "description": "Additional notes for the reminder (optional)"
          },
          "dueDate": {
            "type": "string",
            "description": "Due date in ISO8601 format (optional)"
          },
          "priority": {
            "type": "string",
            "enum": ["none", "low", "medium", "high"],
            "description": "Priority level of the reminder"
          }
        },
        "required": ["listName", "title"]
      }
    },
    {
      "name": "search_reminders",
      "description": "Search for reminders with various filters",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Text to search for in title and notes"
          },
          "lists": {
            "type": "string",
            "description": "Comma-separated list names to search in"
          },
          "completed": {
            "type": "string",
            "enum": ["all", "true", "false"],
            "description": "Filter by completion status"
          },
          "priority": {
            "type": "string",
            "enum": ["any", "none", "low", "medium", "high"],
            "description": "Filter by priority level"
          },
          "dueBefore": {
            "type": "string",
            "description": "Find reminders due before this date (ISO8601)"
          },
          "dueAfter": {
            "type": "string",
            "description": "Find reminders due after this date (ISO8601)"
          },
          "limit": {
            "type": "integer",
            "description": "Maximum number of results to return"
          }
        }
      }
    },
    {
      "name": "update_reminder",
      "description": "Update an existing reminder",
      "parameters": {
        "type": "object",
        "properties": {
          "reminderUuid": {
            "type": "string",
            "description": "UUID of the reminder to update"
          },
          "title": {
            "type": "string",
            "description": "New title for the reminder"
          },
          "notes": {
            "type": "string",
            "description": "New notes for the reminder"
          },
          "dueDate": {
            "type": "string",
            "description": "New due date in ISO8601 format"
          },
          "priority": {
            "type": "string",
            "enum": ["none", "low", "medium", "high"],
            "description": "New priority level"
          },
          "isCompleted": {
            "type": "boolean",
            "description": "Whether the reminder is completed"
          }
        },
        "required": ["reminderUuid"]
      }
    },
    {
      "name": "complete_reminder",
      "description": "Mark a reminder as complete",
      "parameters": {
        "type": "object",
        "properties": {
          "reminderUuid": {
            "type": "string",
            "description": "UUID of the reminder to complete"
          }
        },
        "required": ["reminderUuid"]
      }
    },
    {
      "name": "delete_reminder",
      "description": "Delete a reminder",
      "parameters": {
        "type": "object",
        "properties": {
          "reminderUuid": {
            "type": "string",
            "description": "UUID of the reminder to delete"
          }
        },
        "required": ["reminderUuid"]
      }
    },
    {
      "name": "get_lists",
      "description": "Get all available reminder lists",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "get_reminder",
      "description": "Get a specific reminder by UUID",
      "parameters": {
        "type": "object",
        "properties": {
          "reminderUuid": {
            "type": "string",
            "description": "UUID of the reminder to retrieve"
          }
        },
        "required": ["reminderUuid"]
      }
    },
    {
      "name": "find_subtasks",
      "description": "Find all subtask reminders",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "find_overdue_reminders",
      "description": "Find all overdue reminders",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "find_high_priority_reminders",
      "description": "Find all high priority reminders",
      "parameters": {
        "type": "object",
        "properties": {
          "lists": {
            "type": "string",
            "description": "Comma-separated list names to search in (optional)"
          }
        }
      }
    }
  ]
}
